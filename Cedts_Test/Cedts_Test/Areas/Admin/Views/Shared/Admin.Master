                    </li>
                    <li class="firstlevel">成绩管理<ul class="secondlevel"><li><%:Html.ActionLink("整体情况", "AdminIndex", "Partner") %></li><li><%:Html.ActionLink("成绩详情", "Single", "Partner")%></li></ul></li>
                    <%} %>
                    <%if (Page.User.IsInRole("教师"))
