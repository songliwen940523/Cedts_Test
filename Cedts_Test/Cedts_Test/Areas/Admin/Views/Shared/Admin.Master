                    </li>
                    <li>
                        <%:Html.ActionLink("试题管理", "Index", "Examination")%>
                    </li>
                    <li>
                        <%:Html.ActionLink("试卷管理", "Index", "Paper")%>
                    </li>
                    <li>
                        <%:Html.ActionLink("知识点管理", "Index", "Knowledge")%>
                    </li>
                    <li>
