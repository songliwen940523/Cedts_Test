                    </li>
                    <li>
                        <%: Html.ActionLink("公告管理","Index","Notice") %>
                    </li>
                    <li>
                        <%: Html.ActionLink("意见反馈信息", "FeedBack", "Notice")%>
                    </li>
                    <%} %>
                    <%if (Page.User.IsInRole("管理员"))
                      {%>
                    <li>
                        <%:Html.ActionLink("教师管理", "Teacher", "Partner")%>
                    </li>
                    <li>
